<project name="javabuild" default="build" basedir=".">
    
    <target name="-init">
        <mkdir dir="${target.dir}"/>
    </target>
    
    <target name="clean">
        <delete dir="${target.dir}" includeEmptyDirs="true"/>
    </target>
    
    <target name="build" depends="-init">
        <javac srcdir="${src.dir}"
         destdir="${target.dir}"
         fork="true"/>
    </target>
    
</project>
